@page "{id}"
@model EditProductModel
@{
	ViewData["Title"] = "Product";
}

<h1>Edit @Model.Input.Name</h1>

<form
	method="post" >
	<div
		class="form-group" >
		<label
			asp-for="Input.Name" >
		</label>
		<input
			asp-for="Input.Name"
			class="form-control" />
		<span
			asp-validation-for="Input.Name" >
		</span>
	</div>
	<div
		class="form-group" >
		<label
			asp-for="Input.Price" >
		</label>
		<input
			asp-for="Input.Price"
			class="form-control" />
		<span
			asp-validation-for="Input.Price" >
		</span>
	</div>
	<button
		class="btn btn-primary"
		type="submit" >
		Submit
	</button>
</form>