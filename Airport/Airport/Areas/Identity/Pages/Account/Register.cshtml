@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div
	class="row" >
	<div
		class="col-md-4" >
		<form
			asp-route-returnUrl="@Model.ReturnUrl"
			id="registerForm"
			method="post" >
			<h2>Create a new account.</h2>
			<hr />
			<div
				asp-validation-summary="ModelOnly"
				class="text-danger"
				role="alert" >
			</div>
			<div
				class="form-floating mb-3" >
				<input
					aria-required="true"
					asp-for="Input.Email"
					autocomplete="username"
					class="form-control"
					placeholder="name@example.com" />
				<label
					asp-for="Input.Email" >
					Email
				</label>
				<span
					asp-validation-for="Input.Email"
					class="text-danger" >
				</span>
			</div>
			<div
				class="form-floating mb-3" >
				<input
					aria-required="true"
					asp-for="Input.Password"
					autocomplete="new-password"
					class="form-control"
					placeholder="password" />
				<label
					asp-for="Input.Password" >
					Password
				</label>
				<span
					asp-validation-for="Input.Password"
					class="text-danger" >
				</span>
			</div>
			<div
				class="form-floating mb-3" >
				<input
					aria-required="true"
					asp-for="Input.ConfirmPassword"
					autocomplete="new-password"
					class="form-control"
					placeholder="password" />
				<label
					asp-for="Input.ConfirmPassword" >
					Confirm Password
				</label>
				<span
					asp-validation-for="Input.ConfirmPassword"
					class="text-danger" >
				</span>
			</div>
			<div
				class="form-floating mb-3" >
				<input
					aria-required="true"
					asp-for="Input.EmployeeNumber"
					class="form-control"
					placeholder="EMP123" />
				<label
					asp-for="Input.EmployeeNumber" >
				</label>
				<span
					asp-validation-for="Input.EmployeeNumber"
					class="text-danger" >
				</span>
			</div>
			<div
				class="form-floating mb-3" >
				<input
					aria-required="true"
					asp-for="Input.BoardingPassNumber"
					class="form-control"
					placeholder="A1234" />
				<label
					asp-for="Input.BoardingPassNumber" >
				</label>
				<span
					asp-validation-for="Input.BoardingPassNumber"
					class="text-danger" >
				</span>
			</div>
			<div
				class="form-floating mb-3" >
				<input
					aria-required="true"
					asp-for="Input.DateOfBirth"
					class="form-control" />
				<label
					asp-for="Input.DateOfBirth" >
				</label>
				<span
					asp-validation-for="Input.DateOfBirth"
					class="text-danger" >
				</span>
			</div>
			<div
				class="form-floating mb-3" >
				<select
					aria-required="true"
					asp-for="Input.FrequentFlyerClass"
					asp-items="Model.FrequentFlyerClasses"
					class="form-control" >
					<option></option>
				</select>
				<label
					asp-for="Input.FrequentFlyerClass" >
				</label>
				<span
					asp-validation-for="Input.FrequentFlyerClass"
					class="text-danger" >
				</span>
			</div>
			<div
				class="form-check mb-3" >
				<input
					aria-required="true"
					asp-for="Input.IsBannedFromLounge"
					class="form-check-input"
					type="checkbox" />
				<label
					asp-for="Input.IsBannedFromLounge"
					class="form-check-label" >
				</label>
				<span
					asp-validation-for="Input.IsBannedFromLounge"
					class="text-danger" >
				</span>
			</div>
			<button
				class="btn btn-lg btn-primary w-100"
				id="registerSubmit"
				type="submit" >
				Register
			</button>
		</form>
	</div>
</div>

@section Scripts {
	<partial
		name="_ValidationScriptsPartial" />
}