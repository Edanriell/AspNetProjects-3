@page
@model IndexModel
@{
	ViewData["Title"] = "Select currencies";
}
<h1>Select currencies</h1>

<form
	asp-page="ShowRates"
	method="post" >
	<div
		class="form-group" >
		<select
			asp-items="Model.Currencies"
			class="form-control"
			multiple
			name="currencies" >
		</select>
	</div>
	<button
		class="btn btn-primary"
		name="action"
		type="submit" >
		Filter
	</button>
</form>